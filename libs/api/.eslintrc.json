{
    "extends": ["../../.eslintrc.json"],
    "ignorePatterns": ["!**/*"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
            "rules": {
                "max-classes-per-file": "off"
            }
        },
        {
            "files": ["*.ts", "*.tsx"],
            "parserOptions": {
                "project": ["libs/api/tsconfig.*?.json"]
            },
            "rules": {}
        },
        {
            "files": ["*.js", "*.jsx"],
            "rules": {}
        }
    ]
}
