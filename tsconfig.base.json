{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "exactOptionalPropertyTypes": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["es2022"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "rootDir": ".",
    "skipDefaultLibCheck": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2022",
    "paths": {
      "@deals/api": ["libs/api/src/index.ts"],
      "@deals/auth": ["modules/auth/src/index.ts"],
      "@deals/scheduler": ["modules/scheduler/src/index.ts"],
      "@deals/scraper-service": ["libs/scraper-service/src/index.ts"],
      "@deals/scrapers/ah": ["modules/scrapers/albert-heijn/src/index.ts"],
      "@deals/scrapers/jumbo": ["modules/scrapers/jumbo/src/index.ts"],
      "@deals/scrapers/kruidvat": ["modules/scrapers/kruidvat/src/index.ts"],
      "@deals/service-registry": ["libs/service-registry/src/index.ts"],
      "@deals/storage": ["modules/storage/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
