{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "es2022",
    "lib": ["es2022"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": false,
    "baseUrl": ".",
    "paths": {
      "@deals/api": ["libs/api/src/index.ts"],
      "@deals/scraper-service": ["libs/scraper-service/src/index.ts"],
      "@deals/service-registry": ["libs/service-registry/src/index.ts"],

      "@deals/scheduler": ["apps/scheduler/src/index.ts"],
      "@deals/auth": ["apps/auth/src/index.ts"],
      "@deals/storage": ["apps/storage/src/index.ts"],

      "@deals/scrapers/kruidvat": ["apps/scrapers/kruidvat/src/index.ts"],
      "@deals/scrapers/jumbo": ["apps/scrapers/jumbo/src/index.ts"],
      "@deals/scrapers/ah": ["apps/scrapers/albert-heijn/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
